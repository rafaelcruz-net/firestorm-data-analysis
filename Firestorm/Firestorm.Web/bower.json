{
    "name": "firestorm-bower",
    "description": "Firestorm Script Package Dependencies",
    "authors": [
        "Rafael Cruz"
    ],
    "license": "MIT",
    "homepage": "",
    "private": true,
    "ignore": [
        "**/.*",
        "node_modules",
        "bower_components",
        "test",
        "tests"
    ],
    "dependencies": {
        "jquery": "^2.1.4",
        "requirejs": "^2.1.17",
        "underscore": "^1.8.3",
        "jasmine": "^2.3.0",
        "jasmine-jquery": "^2.1.0",
        "angular": "^1.3.15",
        "angular-resource": "",
        "angular-mocks": "^1.3.15",
        "angular-modal-service": "^0.6.6",
        "angular-sanitize": "^1.4.1",
        "font-awesome": "fontawesome#~4.4.0",
        "foundation-sites": "^6.0.5"

    },
    "install": {
        "path": {
            "/[sa|sc|le]ss$/": "content/scss",
            "js": "scripts/vendor",
            "eot": "content/fonts",
            "svg": "content/fonts",
            "ttf": "content/fonts",
            "woff": "content/fonts",
            "woff2": "content/fonts",
            "otf": "content/fonts"
        },
        "sources": {
            "font-awesome": [ "bower_components/font-awesome/scss/**" ],
            "materialize": [ "bower_components/materialize/sass/**" ],
            "foundation-sites": [ "bower_components/foundation-sites/scss/**", "bower_components/foundation-sites/js/**"  ]

        }
    }
}

